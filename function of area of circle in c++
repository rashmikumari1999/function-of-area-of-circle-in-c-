#include<iostream>
#include<conio.h>
#define Pi 3.14
using namespace std;
int aoc(int r)
{
    int area;
    area=Pi*r*r;
    return area;
};
int main()
{
    int circle,r;
    cout<<"enter the radius of circle";
    cin>>r;
    circle=aoc(r);
    cout<<circle;
}
